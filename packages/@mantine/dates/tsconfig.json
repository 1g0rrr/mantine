{
  "extends": "../../../tsconfig.base.json",
  "include": ["./src", "./types", "../../../@types"],
  "exclude": ["./lib"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@mantine/core": ["../core/src"],
      "@mantine/hooks": ["../hooks/src"],
      "@tests/core": ["../../@tests/core/src"],
      "@tests/dates": ["../../@tests/dates/src"]
    }
  },
  "references": [
    { "path": "../core" },
    { "path": "../hooks" },
    { "path": "../../@tests/core" },
    { "path": "../../@tests/dates" }
  ]
}
