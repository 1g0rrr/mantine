{
  "extends": "../../../tsconfig.base.json",
  "include": ["./src", "./types", "../../../@types"],
  "exclude": [
    "./lib",
    "./esm",
    "./cjs",
    "**/*.story.tsx",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/styles.api.ts",
    "src/components/*/demos/*",
    "src/demos.ts",
    "src/tests"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@mantine/core": ["../core/src"],
      "@mantine/hooks": ["../hooks/src"]
    }
  },
  "references": [{ "path": "../core" }, { "path": "../hooks" }]
}
