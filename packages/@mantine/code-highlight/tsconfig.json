{
  "extends": "../../../tsconfig.base.json",
  "include": ["./src", "./types", "../../../@types"],
  "exclude": ["./lib", "./esm", "./cjs"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@mantine/core": ["../core/src"],
      "@mantine/hooks": ["../hooks/src"],
      "@tests/core": ["../../packages/@tests/core/src"]
    }
  },
  "references": [
    { "path": "../core" },
    { "path": "../hooks" },
    { "path": "../../packages/@tests/core" }
  ]
}
