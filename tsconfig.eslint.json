{
  "extends": "./tsconfig.base.json",
  "include": [
    "./docs",
    "./scripts",
    "./@types",
    "./packages/@tests/*/src",
    "./packages/@docs/*/src",
    "./packages/@mantine/*/src"
  ],
  "exclude": [
    "public",
    "node_modules",
    "./packages/@tests/*/esm/**/*",
    "./packages/@docs/*/cjs/**/*",
    "./packages/@mantine/*/lib/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "@mantine/*": ["src/mantine-*/src"],
      "@tests/*": ["packages/@tests/*/src"],
      "@docs/*": ["packages/@docs/*/src"]
    }
  }
}
