{
  "extends": "./tsconfig.base.json",
  "include": [
    "./docs",
    "./scripts",
    "./@types",
    "./packages/@tests/*/src",
    "./packages/@docs/*/src",
    "./packages/@mantine/*/src"
  ],
  "exclude": [
    "public",
    "node_modules",
    "src/mantine-*/esm/**/*",
    "src/mantine-*/lib/**/*",
    "src/mantine-*/cjs/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "@mantine/*": ["src/mantine-*/src"],
      "@tests/*": ["packages/@tests/*/src"],
      "@docs/*": ["packages/@docs/*/src"]
    }
  }
}
