{
  "extends": "./tsconfig.base.json",
  "include": ["./docs", "src/mantine-*/src", "./scripts", "./@types", "./@tests"],
  "exclude": [
    "public",
    "node_modules",
    "src/mantine-*/esm/**/*",
    "src/mantine-*/lib/**/*",
    "src/mantine-*/cjs/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "@mantine/*": ["src/mantine-*/src"],
      "@tests/*": ["packages/@tests/*/src"]
    }
  }
}
