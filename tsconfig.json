{
  "extends": "./tsconfig.base.json",
  "include": ["src/mantine-*/src", "./scripts", "@types", "packages/@tests/*/src"],
  "exclude": [
    "public",
    "node_modules",
    "src/mantine-*/esm/**/*",
    "src/mantine-*/lib/**/*",
    "src/mantine-*/cjs/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "@mantine/*": ["src/mantine-*/src"],
      "@tests/*": ["packages/@tests/*/src"]
    }
  }
}
