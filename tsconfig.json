{
  "extends": "./tsconfig.base.json",
  "include": [
    "./scripts",
    "@types",
    "packages/@tests/*/src",
    "packages/@docs/*/src",
    "packages/@mantine/*/src"
  ],
  "exclude": [
    "public",
    "node_modules",
    "src/mantine-*/esm/**/*",
    "src/mantine-*/lib/**/*",
    "src/mantine-*/cjs/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "@mantine/*": ["packages/@mantine/*/src"],
      "@tests/*": ["packages/@tests/*/src"],
      "@docs/*": ["packages/@docs/*/src"]
    }
  }
}
